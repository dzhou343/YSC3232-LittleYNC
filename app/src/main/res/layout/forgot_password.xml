<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:background="@android:color/background_dark"
    >


    <TextView
        android:id="@+id/type_in_your_email"
        android:layout_marginTop="184dp"
        android:text="Type in your email here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/activity_gain"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/submit_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="184dp"
        android:onClick="resetPassword"
        android:enabled="true"
        android:fontFamily="@font/advent_pro_semibold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Reset my password!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/forgot_password_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/submit_forgot_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@android:color/white"
        android:textColorHint="#C89FFD"
        android:textColor="#C89FFD"
        style="@style/activity_gain"
        android:fontFamily="@font/advent_pro_semibold"/>

</androidx.constraintlayout.widget.ConstraintLayout>