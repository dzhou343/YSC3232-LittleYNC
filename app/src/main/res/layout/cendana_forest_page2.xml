<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forest2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actionActivities.CendanaForestActivity"
    android:background="@drawable/design_2"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/Dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical"

        >



        <LinearLayout

            android:id="@+id/level_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blank"
                style="@style/user_stat_style1"
                android:layout_height="wrap_content"
                android:layout_width="170dp"
                android:paddingHorizontal="5dp"
             />

            <TextView
                android:id="@+id/wood_gear_level"
                style="@style/user_stat_style1"
                android:paddingHorizontal="5dp"
                android:text="5" />

            <TextView
                android:id="@+id/fish_gear_level"
                style="@style/user_stat_style1"
                android:paddingHorizontal="5dp"
                android:text="100" />

            <TextView
                android:id="@+id/combat_gear_level"
                style="@style/user_stat_style1"
                android:layout_width="30dp"
                android:paddingHorizontal="5dp"
                android:text="20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/res_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blank2"
                style="@style/user_stat_style2"
                android:layout_height="wrap_content"
                android:layout_width="170dp"
                android:paddingHorizontal="5dp"
                />

            <TextView
                android:id="@+id/wood_res"
                style="@style/user_stat_style2"


                android:text="5" />

            <TextView
                android:id="@+id/fish_res"
                style="@style/user_stat_style2"


                android:text="100" />

            <TextView
                android:id="@+id/gold_res"
                style="@style/user_stat_style2"
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:text="2000" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/woodcutting_name"
        android:textColor="#C89FFD"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/monster_img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:srcCompat="@drawable/ic_tree"
        android:tint="@color/final_green_actual">

    </ImageView>

    <TextView
        android:id="@+id/gain_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/toast_msg"
        android:textColor="#C89FFD"
        android:textSize="20dp"
        android:textAlignment="center">
    </TextView>

    <TextView
        android:id="@+id/stamina_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/stamina"
        android:textAlignment="center"
        android:textColor="#C89FFD"
        android:textSize="20dp">

    </TextView>


    <LinearLayout
        android:id="@+id/time_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/timer_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:tint="#C89FFD"
            app:srcCompat="@drawable/ic_baseline_timer_24"></ImageView>

        <TextView
            android:id="@+id/time_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="5:09"
            android:textColor="#C89FFD"
            android:textSize="25sp"></TextView>

        <ImageButton
            android:id="@+id/start_pause_resume_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:tint="#C89FFD"
            app:srcCompat="@drawable/ic_baseline_play_circle_filled_24"></ImageButton>

        <ImageButton
            android:id="@+id/reset_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:tint="#C89FFD"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_baseline_refresh_24"></ImageButton>


    </LinearLayout>

</LinearLayout>