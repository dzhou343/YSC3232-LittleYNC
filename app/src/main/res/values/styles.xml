<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="marketplace1_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/advent_pro_semibold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="marketplace2_title">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/advent_pro_semibold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="marketplace1_btn">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:textColor">@color/marketplace1_btn</item>
        <item name="android:background">@drawable/marketplace1_btn</item>
        <item name="fontFamily">@font/advent_pro_semibold</item>
        <item name="android:text">@string/marketplace1_btn</item>

    </style>

    <style name="spinner3" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:background">@drawable/marketplace_spinner_dropdown_background</item>
        <item name="fontFamily">@font/advent_pro_semibold</item>
    </style>

    <style name="marketplace2_btn">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/marketplace2_btn</item>
    </style>

    <style name="marketplace2_btn_text">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/marketplace2_btn</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/advent_pro_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tutorial_title_style">
        <item name="fontFamily">@font/advent_pro_semibold</item>
        <item name="android:textColor">#C89FFD</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="tutorial_text_style">
        <item name="fontFamily">@font/advent_pro_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#C89FFD</item>


    </style>
</resources>